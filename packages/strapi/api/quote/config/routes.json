{
  "routes": [
    {
      "method": "GET",
      "path": "/quotes",
      "handler": "quote.find",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/quotes/count",
      "handler": "quote.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/quotes/:id",
      "handler": "quote.findOne",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/quotes",
      "handler": "quote.create",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/quotes/:id",
      "handler": "quote.update",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/quotes/:id",
      "handler": "quote.delete",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    }
  ]
}